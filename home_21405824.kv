<HomeScreen>:
    name: 'HomeScreen'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size

    Column:
        MDToolbar:
            elevation: dp(5)
            title: ''
            right_action_items:[['magnify', lambda x: app.dosomething(x)], ["clock", lambda x: app.callback_2()]]
            md_bg_color: app.theme_cls.accent_color

        Column:
            halign: 'center'
            valign: 'center'
            padding: dp(100)
            spacing: dp(20)

            Image:
                source: 'genshin.png'

            MDLabel:
                id: label
                text: 'Genshin'
                font_size: dp(48)
                color: .5, .5, .8, 1

            Widget:
                expandable: True

            MDRaisedButton:
                text: 'Login'
                on_release: root.to_login()

            MDRaisedButton:
                text: 'Register'
                on_release: root.to_register()




