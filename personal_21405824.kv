<ContentNavigationDrawer>

    ScrollView:

        MDList:

            OneLineListItem:
                text: "HomePage"
                on_press:
                    root.nav_drawer.set_state("close")
                    on_release: root.to_home()

            OneLineListItem:
                text: "PersonalPage"
                on_press:
                    root.nav_drawer.set_state("close")
                    on_release: root.to_PersonalScreen()


<PersonalScreen>:
    name: "PersonalScreen"
    title: ''
    label_text: ''
    content: ''
    phone: ''

    Column:

        MDToolbar:
            id: toolbar
            pos_hint: {"top": 1}
            elevation: 10
            title: "Account: " + root.title
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
            right_action_items: [['magnify', lambda x: app.dosomething(x)]]



        Column:
            halign: 'center'
            valign: 'center'
            padding: dp(100)
            spacing: dp(20)
            

            MDLabel:
                text: "Account: " + root.title
                font_size: dp(20)
                color: .5, .5, .8, 1
            
            MDLabel:
                text: "Emailaddress: " + root.label_text
                font_size: dp(20)
                color: .5, .5, .8, 1

            MDLabel:
                text: "Password: " + root.content
                font_size: dp(20)
                color: .5, .5, .8, 1

            MDLabel:
                text: "Phonenumber: " + root.phone
                font_size: dp(20)
                color: .5, .5, .8, 1


    MDNavigationLayout:
        x: toolbar.height

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                nav_drawer: nav_drawer

