<RegisterScreen>:
    name: 'RegisterScreen'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size

    Column:
        MDToolbar:
            elevation: dp(5)
            title: ''
            left_action_items:[['arrow-left', lambda x: root.back()]]
            md_bg_color: app.theme_cls.accent_color

        Column:
            halign: 'center'
            valign: 'center'
            padding: dp(100)
            spacing: dp(20)

            Widget:
                expandable: True

            Image:
                source: 'genshin.png'

            MDLabel:
                id: label
                text: 'Genshin'
                font_size: dp(48)
                color: .5, .5, .8, 1

            MDTextField:
                id: txt_id
                hint_text: 'Account'
                required: False

            MDTextField:
                id: txt_emailaddress
                hint_text: 'Email address'
                required: False

            MDTextField:
                id: txt_password
                hint_text: 'Password'
                password: True
                required: False

            MDTextField:
                id: txt_phonenumber
                hint_text: 'Phone number'
                required: False
            
            Button:
                text: 'Register'
                text_color: .5, .5, .8, 1
                on_release: root.register()

            Button:
                text: 'Cancel'
                text_color: .5, .5, .8, 1
                on_release: root.cancel()
