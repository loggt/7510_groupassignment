<LoginScreen>:
    name: 'LoginScreen'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size

    Column:
        MDToolbar:
            title: ''
            md_bg_color: app.theme_cls.accent_color

        Column:
            halign: 'center'
            valign: 'center'
            padding: dp(100)
            spacing: dp(20)

            Widget:
                expandable: True

            Image:
                source: 'cern.jpg'

            MDLabel:
                id: label
                text: 'CERN'
                font_size: dp(48)
                color: .5, .5, .8, 1

            MDTextField:
                id: txt_id
                hint_text: 'Account'

            MDTextField:
                id: txt_password
                hint_text: 'Password'
                password: True
            
            Button:
                text: 'Login'
                text_color: .5, .5, .8, 1
                on_release: root.login()

            Button:
                text: 'Register'
                text_color: .5, .5, .8, 1
                on_release: root.to_register()

            Button:
                text: 'Cancel'
                text_color: .5, .5, .8, 1
                on_release: root.cancel()


